{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "GCC Compiler",
            "command": "F:\\mingw64_GCC\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\1.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: F:\\mingw64_GCC\\bin\\g++.exe"
        },
        {
            "type": "cppbuild",
            "label": "clang Compiler",
            "command": "F:\\mingw64_GCC\\bin\\clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-std=c++20",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\1.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: F:\\mingw64_GCC\\bin\\clang++.exe"
        },
        {
            "type": "cppbuild",
            "label": "MSVC Compiler",
            "command": "F:\\mingw64_GCC\\bin\\clang-cl.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\*.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: F:\\mingw64_GCC\\bin\\clang-cl.exe"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "F:\\mingw64_GCC\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cmake",
            "label": "CMake: 清理重新生成",
            "command": "cleanRebuild",
            "targets": [
                "[N/a - 选择工具包]"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake 模板 清理重新生成 任务"
        }
    ]
}